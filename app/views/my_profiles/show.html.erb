<div class='container mt-5'>
  <h1><%= @user.name %></h1>
  <h1><%= @user.email %></h1>
  <h1><%= @user.credits %></h1>
  <h4> Following: </h4>
    <% @user.following.each do | following | %>
      <p><%= following.name %></p>
    <% end %>

  <h4> Followers: </h4>
    <% @user.followers.each do | follower | %>
      <p><%= follower.name %></p>
    <% end %>

  <h4> Wishlist: </h4>
    <% @wishlist.each do |item| %>
    <p><%= item.lesson.title %>
    <%= link_to "Remove",
                  wishlist_item_path(item),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    <% end %>




<%= link_to 'Edit my info', edit_my_profiles_path %>
</div>
