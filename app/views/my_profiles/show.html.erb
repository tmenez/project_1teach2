<div class='container mt-5 container-profile w-100'>
  <div class='profile-item-1'>
    <% if @user.photo.attached?%>
      <div class='avatar-profile'>
          <%= cl_image_tag @user.photo.key, :transformation=>[
        {:gravity=>"face", :height=>400, :width=>400, :crop=>"crop"},
        {:radius=>"max"},
        {:width=>200, :crop=>"scale"}
        ] %>
      </div>
    <% else %>
      <div class='avatar-profile'>
        <%= image_tag "avatar.png", class: "avatar", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
      </div>
    <% end %>
      <%= link_to edit_my_profiles_path  do %>
        <i class="fas fa-pencil"></i>
      <% end %>

      <hr class='w-50 py-auto'>
      <h1 class='text-center mt-5 user-name-profile'><%= @user.name %></h1>
      <p class='text-center'><%= @user.credits %> Credits</p>
      <p class='text-center'>Learned <%= @user.meetings.count %> new things.</p>
      <p class='text-center'><%= @user.pronouns %></p>
      <p class='text-center'>About me: <%= @user.bio %></p>
      <p class='text-center'>About me: <%= @user.email%></p>
  </div>

      <div class='line'>
        <hr class='w-50 py-auto'>
      </div>
      <div class='user-info'>
        <h1 class='text-center mt-5 user-name-profile'><%= @user.name %></h1>
        <p>pronouns</p>
        <p class='text-center'><%= @user.credits %> Credits</p>
        <p class='text-center'>Learned <%= @user.meetings.count %> new things.</p>
        <p>bio</p>
      </div>
  </div>
  <div class='profile-item-2'>
    <h2 class='text-center pt-3 pb-2'>Teaching path</h2>
            <div class='line-learn'>
              <hr class='w-50 py-auto'>
            </div>
        <% if @lessons.empty? %>
          <p>No lessons yet</p>
        <% else %>
          <div id="carouselExampleControlsNoTouching" class="carousel slide carousel-lesson" data-touch="false" data-interval="false">
              <div class="carousel-inner">
                <% @lessons.each do | lesson | %>
                  <% if lesson.photo.attached?%>
                    <div class="carousel-item active ">
                      <div class="car-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=cl_image_path lesson.photo.key%>')">
                        <h3><%= link_to lesson.title, lesson_path(lesson)%></h3>
                      </div>
                    </div>
                      <% else %>
                          <div class="car-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "lessons.jpg" %>')">
                            <h3><%= link_to lesson.title, lesson_path(lesson)%></h3>
                          </div>
                        <% end %>
                  <% end %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>
  </div>
  <div class='profile-item-3'>
    <h2 class='text-center pt-3 pb-2'>Learning Path</h2>
      <div class='line-learn'>
        <hr class='w-50 py-auto'>
      </div>
    <div class="cards">
        <% if @meetings.empty? %>
          <p>No meetings yet</p>
          <p>No meetings yet</p>
          <p>No meetings yet</p>
          <p>No meetings yet</p>
        <% else %>
          <% @meetings.each do | meeting | %>
            <%= meeting.lesson.title %>
            <% if meeting.lesson.photo.attached?%>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(' <%= cl_image_path meeting.lesson.photo.key %>')">
                <h3><%= link_to meeting.lesson.title, lesson_path(meeting.lesson)%></h3>
              </div>
            <% else %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "lessons.jpg" %>')">
                <h3><%= link_to meeting.lesson.title, lesson_path(meeting.lesson)%></h3>
              </div>
            <% end %>
          <% end %>
        <% end %>
    </div>
  </div>
  <div class='profile-item-4'>
    <h4 class='friends text-center'> Friends: </h4>
      <div class='line-friends'>
        <hr class='w-50 py-auto'>
      </div>
      <div class='friends-following'>
        <% @user.following.each do | following | %>
          <div class='friends-avatar'>
            <% if following.photo.attached?%>
              <%= cl_image_tag following.photo.key, class: "avatar" %>
            <% else %>
              <%= image_tag "avatar.png", class: "avatar" %>
            <% end %>
        <% end %>
        </div>
      </div>
  </div>
</div>
