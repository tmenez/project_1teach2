<div class='container mt-5'>

  <div>
    <h1><%= @user.name %></h1>
    <h1><%= @user.email %></h1>
    <h1><%= @user.credits %></h1>
  </div>

  <div>
    <h2>Teaching path</h2>
    <p>
      <% if @lessons.empty? %>
        <p>No lessons yet</p>
      <% else %>
        <% @lessons.each do | lesson | %>
          <%= lesson.title %>
          <% if lesson.photo.attached?%>
            <%= cl_image_tag lesson.photo.key %>
          <% else %>
            <%= image_tag "lessons.jpg" %>
          <% end %>
        <% end %>
      <% end%>
    </p>
  </div>

  <div>
    <h2>Learning path</h2>
    <p>
      <% if @meetings.empty? %>
       <p>No meetings yet</p>
      <% else %>
        <% @meetings.each do | meeting | %>
          <%= meeting.lesson.title %>
          <% if meeting.lesson.photo.attached?%>
            <%= cl_image_tag meeting.lesson.photo.key %>
          <% else %>
            <%= image_tag "lessons.jpg" %>
          <% end %>

        <% end %>
      <% end %>
    </p>
  </div>

  <div>
    <h4> Following: </h4>
      <% @user.following.each do | following | %>
        <p><%= following.name %></p>
        <% if following.photo.attached?%>
          <%= cl_image_tag following.photo.key, class: "avatar" %>
        <% else %>
          <%= image_tag "avatar.png", class: "avatar" %>
        <% end %>
      <% end %>

    <h4> Followers: </h4>
      <% @user.followers.each do | follower | %>
        <p><%= follower.name %></p>
        <% if follower.photo.attached?%>
            <%= cl_image_tag follower.photo.key, class: "avatar" %>
        <% else %>
          <%= image_tag "avatar.png", class: "avatar" %>
        <% end %>
      <% end %>
  </div>






<%= link_to 'Edit my info', edit_my_profiles_path %>
</div>
