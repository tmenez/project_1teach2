
<div class='container mt-5 w-50'>
  <section>
    <h2>Tell us more:</h2>
    <%= simple_form_for(@user, url: my_profiles_path) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name, placeholder: 'Edit a name or nickname' %>
      </div>

      <div class="form-inputs">
        <%= f.input :pronouns, placeholder: 'How do you like to be called' %>
      </div>

      <div class="form-inputs">
        <%= f.input :bio, placeholder: 'Tell us more about you' %>
      </div>

      <div class="form-inputs">
        <%= f.input :photo, as: :file %>
      </div>


      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-outline-light mt-3 mb-3' %>
      </div>

    <% end %>
  </section>
</div>
