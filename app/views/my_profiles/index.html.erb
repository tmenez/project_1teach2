<div class='container mt-5'>
  <p id="notice"><%= notice %></p>

  <%= simple_form_for :search,  url: index_path , :method => :get do |f| %>
    <%= f.input :name, :autofocus => true %>
    <%= f.submit "Search" %>
  <% end %>

  <h1>People</h1>

  <%= form_tag index_path, method: :get, class: 'form-inline text-center d-flex form-search' do %>
          <div>
            <%= label :name, "Find animals near to you: ", class: 'search-label' %>
          </div>
          <div>
            <%= text_field_tag :name, params[:name], placeholder: "Find a friend", class: 'form-control text-center search-location' %>
          </div>

          <div class="search-button">
            <%= submit_tag 'Search', class: 'btn btn-primary search-btn' %>
          </div>
        <% end %>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Credits</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% if @user != current_user %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.credits %></td>
            <td><%= link_to 'Show', show_path(user), class: 'btn btn-success' %></td>


          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

</div>
