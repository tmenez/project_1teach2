<div class="background">

  <div class='container py-5'>

    <div class="d-flex align-items-center flex-column">
      <%= link_to "New class",  new_lesson_path, class: 'btn btn-outline-light mt-3 mb-3' %>
    </div>

    <div class="cards-lesson">

      <% @lessons.each do |lesson| %>
        <%= link_to lesson_path(lesson), class: "links" do %>
          <% if lesson.photo.attached?%>
            <div class="card-category grow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path lesson.photo.key %>')">
              <div><%= lesson.title %></div>
            </div>
          <% else %>
            <div class="card-category grow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path 'lessons.jpg' %>')">
              <div><%= lesson.title %></div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
