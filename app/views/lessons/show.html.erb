<div class='container'>

    <% if @lesson.photo.attached?%>
      <div class="banner" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%),url('<%= cl_image_path @lesson.photo.key, crop: :thumb, gravity: :face %>')">
        <h1 class="text-center"> <%= @lesson.title %></h1>
      </div>
    <% else %>
      <div class="banner" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%),url('<%= image_path 'lessons.jpg' %>')">
        <h1 class="text-center"> <%= @lesson.title %></h1>
      </div>
    <% end %>



  <p class='pt-3'><%= @lesson.description %></p>
  <p><%= @lesson.start_date %> | <%= @lesson.end_date %></p>


  <%= link_to "Update Lesson", edit_lesson_path(@lesson) %>

  <% unless current_user.wishlist_lessons.include?(@lesson)%>
    <%= simple_form_for [ @lesson, @wishlist_item ] do |f| %>
      <%= f.submit "Add to wishlist" %>
    <% end%>
  <% end %>

  <div>
    <% @lesson.meetings.each do |meeting|%>
      <div> Scheduled: <%= meeting. name %> | Date: From <%= meeting.start_time %> until <%= meeting.end_time%>
      <%= link_to "Update", edit_meeting_path(meeting) %>
      <%= link_to "Remove",
                  meeting_path(meeting),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      <%= link_to "call", meeting_rooms_path(meeting), method: :post %>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [ @lesson, @meeting ] do |f| %>
    <%= f.input :name %>
    <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.submit "Create meeting" %>
  <% end %>

  <%= link_to "Lessons Index", lessons_path %>
  <%= link_to "Remove",
                    lesson_path(@lesson),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
</div>
