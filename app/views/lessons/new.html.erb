<div class='container w-50'>
  <h1 class='text-center pt-3'>Create a new class</h1>
  <%= simple_form_for @lesson do |f| %>
    <%= f.input :title %>
    <div class='grid-date'>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker form-font"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker form-font"} %>
    </div>
    <%= f.input :topic_id, collection: @topics, input_html: {class: "form-font"} %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: 'btn btn-outline-light mt-3 mb-3' %>
  <% end %>
</div>
