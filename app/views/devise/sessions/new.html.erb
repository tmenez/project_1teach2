<div class="container-title">
  <div class="typewriter d-flex flex-column align-items-center justify-content-center">
  <h1>1teach2</h1>
  </div>
</div>

<div class="d-flex flex-column align-items-center justify-content-center position-relative">
  <div class= "container-login">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs d-flex align-items-center justify-content-center">
        <div class="text-field">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "login" %>
        </div>
      <% end %>
      </div>


    <div class="options">
        <%= render "devise/shared/links" %>
    </div>
  </div>
      <div class="row-images">
      <div>
        <%= image_tag "guitar-girl.png", class: "guitar-image" %>
      </div>
      <div>
        <%= image_tag "yoga.png", class: "yoga-image" %>
      </div>
    </div>
</div>
