<div class='container mt-5'>
  <p id="notice"><%= notice %></p>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Credits</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.credits %></td>
          <td><%= link_to 'Show', profile_path(user), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1>Users:</h1>
  <ul>
    <% @users.each do |user| %>
      <%= render "user", user: user %>
    <% end %>
  </ul>

</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="people-nearby">
                  <div class="col-md-3 col-sm-3">
                    <% @users.each do |user| %>
                      <%= render "user", user: user %>
                    <% end %>
                  </div>
            </div>
    	  </div>
	  </div>
</div>
